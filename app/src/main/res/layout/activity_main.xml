<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:background="@color/calculator_background"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/summary"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.28"
        android:background="@color/display_background"
        android:clickable="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:ems="10"
        android:gravity="bottom|end"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:linksClickable="false"
        android:longClickable="false"
        android:textColor="@color/text_color_display"
        android:textColorHint="@color/text_color_display"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="410dp" />

    <Button
        android:id="@+id/button_Div"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="รท"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toBottomOf="@+id/summary"
        app:layout_constraintBottom_toTopOf="@+id/button_Dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_Percent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <Button
        android:id="@+id/button_Percent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="%"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_Div"
        app:layout_constraintBottom_toBottomOf="@+id/button_Div"
        app:layout_constraintStart_toEndOf="@+id/button_Div"
        app:layout_constraintEnd_toStartOf="@+id/button_Parentheses"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_Parentheses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="( )"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_Div"
        app:layout_constraintBottom_toBottomOf="@+id/button_Div"
        app:layout_constraintStart_toEndOf="@+id/button_Percent"
        app:layout_constraintEnd_toStartOf="@+id/button_Del"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_Del"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_delete_accent"
        android:text="CE"
        android:textColor="@color/text_color_delete_accent"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_Div"
        app:layout_constraintBottom_toBottomOf="@+id/button_Div"
        app:layout_constraintStart_toEndOf="@+id/button_Parentheses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_Dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="."
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toBottomOf="@+id/button_Div"
        app:layout_constraintBottom_toTopOf="@+id/button_9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_Mult"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button_Mult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="X"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_Dot"
        app:layout_constraintBottom_toBottomOf="@+id/button_Dot"
        app:layout_constraintStart_toEndOf="@+id/button_Dot"
        app:layout_constraintEnd_toStartOf="@+id/button_Plus"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_Plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="+"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_Dot"
        app:layout_constraintBottom_toBottomOf="@+id/button_Dot"
        app:layout_constraintStart_toEndOf="@+id/button_Mult"
        app:layout_constraintEnd_toStartOf="@+id/button_Back"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_Back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="Back"
        android:textColor="@color/text_color_normal"
        android:textSize="20sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_Dot"
        app:layout_constraintBottom_toBottomOf="@+id/button_Dot"
        app:layout_constraintStart_toEndOf="@+id/button_Plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="9"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toBottomOf="@+id/button_Dot"
        app:layout_constraintBottom_toTopOf="@+id/button_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_8"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="8"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_9"
        app:layout_constraintBottom_toBottomOf="@+id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_9"
        app:layout_constraintEnd_toStartOf="@+id/button_7"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="7"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_9"
        app:layout_constraintBottom_toBottomOf="@+id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintEnd_toStartOf="@+id/button_Minus"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_Minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="-"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_9"
        app:layout_constraintBottom_toBottomOf="@+id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="6"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toBottomOf="@+id/button_9"
        app:layout_constraintBottom_toTopOf="@+id/button_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="5"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_6"
        app:layout_constraintBottom_toBottomOf="@+id/button_6"
        app:layout_constraintStart_toEndOf="@+id/button_6"
        app:layout_constraintEnd_toStartOf="@+id/button_4"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="4"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_6"
        app:layout_constraintBottom_toBottomOf="@+id/button_6"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintEnd_toStartOf="@+id/button_Equals"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_Equals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_special_accent"
        android:text="="
        android:textColor="@color/text_color_equals_accent"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_6"
        app:layout_constraintBottom_toBottomOf="@+id/button_6"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="3"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toBottomOf="@+id/button_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="2"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_3"
        app:layout_constraintBottom_toBottomOf="@+id/button_3"
        app:layout_constraintStart_toEndOf="@+id/button_3"
        app:layout_constraintEnd_toStartOf="@+id/button_1"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="1"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_3"
        app:layout_constraintBottom_toBottomOf="@+id/button_3"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintEnd_toStartOf="@+id/button_0"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/button_margin"
        android:backgroundTint="@color/button_background_normal"
        android:text="0"
        android:textColor="@color/text_color_normal"
        android:textSize="30sp"
        app:cornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/button_3"
        app:layout_constraintBottom_toBottomOf="@+id/button_3"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>